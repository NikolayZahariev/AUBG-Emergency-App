<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.echo.emergencyapp.Security"
    android:background="#cf140d"
    android:padding="16dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#f2e5e5"
        android:padding="16dp">


        <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@mipmap/ic_security"
        android:layout_gravity="center_horizontal" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name: Ilko Vangelov"
        android:textSize="25sp" android:textStyle="bold"
        android:id="@+id/txt_Security_Name"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="#0f0808" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/security_responsibilites"
        android:textSize="20dp"
        android:id="@+id/txt_Security_Respons"
        android:layout_gravity="center_horizontal"
        android:maxWidth="400dp"
        android:textColor="#0f0808" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Office Location: Main Building \nRoom Number: 108A"
        android:textSize="20sp" android:textStyle="bold"
        android:id="@+id/txt_Security_Office"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="20dp"
        android:textAlignment="center"
        android:textColor="#0f0808" />

        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call"
        android:textSize="35sp"
        android:id="@+id/btn_Security_Call"
        android:background="@drawable/button_shape_others"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold"
        android:textColor="#ffffff" />

</LinearLayout>
</ScrollView>